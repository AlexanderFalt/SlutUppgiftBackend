{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "strict": true,
      "esModuleInterop": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "typeRoots": ["./types", "./node_modules/@types"],
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true
    }
}